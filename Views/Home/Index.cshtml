<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>Addressing your Addressing needs!</title>
      <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u" crossorigin="anonymous">
  </head>
  <body>
    <h1>Welcome to Address Book</h1>
    @if (@Model.Count == 0)
    {
      <h3>No <a href="/contacts/new">contacts</a> in your AddressBook yet!</h3>
    }
    @foreach (var contact in Model)
    {
      <h3><a href="/contacts/@contact.GetId()">@contact.GetName()</a></h3>
    }

    <p><a href="/contacts/new">Add a new Contact</a></p>
  </body>
</html>
